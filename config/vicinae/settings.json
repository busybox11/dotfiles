// This configuration is merged with the default vicinae configuration file, which you can obtain by running the `vicinae config default` command.
// Every item defined in this file takes precedence over the values defined in the default config or any other imported file.
//
// You can make manual edits to this file, however you should keep in mind that this file may be written to by vicinae when a configuration change is made through the GUI.
// When that happens, any custom comments or formatting will be lost.
//
// If you want to maintain a configuration file with your own comments and formatting, you should create a separate file and add it to the 'imports' array.
//
// Learn more about configuration at https://docs.vicinae.com/config

{
   "$schema": "https://vicinae.com/schemas/config.json",
   "font": {
      "normal": {
         "family": "CaskaydiaCove Nerd Font"
      }
   },
   "theme": {
      "dark": {
         "name": "matugen",
         "icon_theme": "Papirus-Dark"
      }
   },
   "launcher_window": {
      "opacity": 0.75,
      "layer_shell": {
         "enabled": false
      }
   },
   "keybinds": {
      "toggle-action-panel": "control+K"
   },
   "favorites": [
      "clipboard:history",
      "@thomaslombart/store.raycast.github:notifications",
      "@jomifepe/store.raycast.bitwarden:authenticator",
      "@mattisssa/store.raycast.spotify-player:search",
      "@jomifepe/store.raycast.bitwarden:search",
      "@knoopx/store.vicinae.systemd:services",
      "files:search"
   ],
   "providers": {
      "@ShyAssassin/store.vicinae.vscode-recents": {
         "preferences": {
            "vscodeFlavour": "Cursor"
         }
      },
      "@degouville/store.raycast.cursor-recent-projects": {
         "preferences": {
            "terminalApp": "kitty"
         }
      },
      "@sovereign/store.vicinae.hypr-keybinds": {
         "preferences": {
            "keybindsConfigPath": "~/.config/hypr"
         }
      },
      "@thomas/store.raycast.visual-studio-code": {
         "preferences": {
            "build": "Cursor",
            "terminalApp": "kitty"
         },
         "entrypoints": {
            "commandpalette": {
               "enabled": false
            }
         }
      },
      "@thomaslombart/store.raycast.github": {
         "entrypoints": {
            "my-discussions": {
               "enabled": true
            },
            "search-discussions": {
               "enabled": true
            }
         }
      },
      "applications": {
         "preferences": {
            "launchPrefix": "uwsm app -- ",
            "paths": [
               "/home/rain/.local/share/applications",
               "/var/lib/flatpak/exports/share/applications",
               "/usr/share/applications",
               "/home/rain/.nix-profile/share/applications"
            ]
         }
      },
      "core": {
         "entrypoints": {
            "inspect-local-storage": {
               "enabled": true
            }
         }
      },
      "system": {
         "entrypoints": {
            "browse-apps": {
               "enabled": true,
               "preferences": {
                  "showHidden": true
               }
            }
         }
      }
   }
}